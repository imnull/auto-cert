{
  "name": "auto-cert",
  "version": "1.0.0",
  "description": "自动化 HTTPS 证书申请与部署工具",
  "main": "lib/index.js",
  "bin": {
    "auto-cert": "./bin/auto-cert.js"
  },
  "scripts": {
    "cert:issue": "node bin/auto-cert.js issue",
    "cert:renew": "node bin/auto-cert.js renew",
    "cert:renew:all": "node bin/auto-cert.js renew-all",
    "cert:deploy": "node bin/auto-cert.js deploy",
    "cert:check": "node bin/auto-cert.js check",
    "setup": "node scripts/post-install.js",
    "lint": "eslint lib/ bin/ scripts/",
    "lint:fix": "eslint lib/ bin/ scripts/ --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "ssl",
    "tls",
    "certificate",
    "letsencrypt",
    "acme",
    "https",
    "nginx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "acme-client": "^5.0.0",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "node-forge": "^1.3.1",
    "ssh2": "^1.14.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
