{
  "name": "auto-cert",
  "version": "1.0.0",
  "description": "自动化 HTTPS 证书申请与部署工具 - 基于 Let's Encrypt 的纯手动 CLI 工具",
  "main": "lib/index.js",
  "bin": {
    "auto-cert": "./bin/auto-cert.js"
  },
  "scripts": {
    "cert:issue": "node bin/auto-cert.js issue",
    "cert:renew": "node bin/auto-cert.js renew",
    "cert:renew:all": "node bin/auto-cert.js renew-all",
    "cert:deploy": "node bin/auto-cert.js deploy",
    "cert:check": "node bin/auto-cert.js check",
    "nginx:generate": "node bin/auto-cert.js nginx-generate",
    "setup": "node scripts/setup.js",
    "lint": "eslint lib/ bin/ scripts/",
    "lint:fix": "eslint lib/ bin/ scripts/ --fix",
    "test": "jest"
  },
  "keywords": [
    "ssl",
    "tls",
    "certificate",
    "letsencrypt",
    "acme",
    "https",
    "nginx",
    "cli"
  ],
  "author": "imnull",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "acme-client": "^5.3.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "node-forge": "^1.3.1",
    "ora": "^5.4.1",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0"
  }
}
